read -p "Sure you want to erase all persistency info? [capital Y] " k

if [ "$k" == "Y" ]; then
   rm -r persist/*
   rm lift_proto.db.*
   rm -r src/main/webapp/constitutions/*
   rm -fr src/main/webapp/constitutions/.*
   rm -r users/*
   rm -r binaries/*
else
   echo "Erasing skipped, you didn't press [Y]... Sorry my friend."
fi;
